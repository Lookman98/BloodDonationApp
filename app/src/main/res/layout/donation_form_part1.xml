            android:layout_height="42dp"
            android:orientation="horizontal"
            android:showDividers="beginning|middle|end"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="278dp"
            tools:layout_editor_absoluteY="132dp">

