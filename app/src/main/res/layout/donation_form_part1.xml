          <TextView
              android:id="@+id/fourA"
              android:layout_width="225dp"
              android:layout_height="26dp"
              android:text="a) Taken any aspirin?"
              android:textColor="@color/black"/>

          <RadioGroup
              android:id="@+id/fourARadio"
              android:layout_width="116dp"
              android:layout_height="42dp"
              android:orientation="horizontal"
              android:showDividers="beginning|middle|end"
              tools:ignore="MissingConstraints"
              tools:layout_editor_absoluteX="278dp"
              tools:layout_editor_absoluteY="212dp">

              <RadioButton
                  android:id="@+id/fourAYes"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Yes"
                  tools:ignore="MissingConstraints"
                  tools:layout_editor_absoluteX="278dp"
                  tools:layout_editor_absoluteY="59dp" />

              <RadioButton
                  android:id="@+id/fourANo"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="No"
                  tools:ignore="MissingConstraints"
                  tools:layout_editor_absoluteX="341dp"
                  tools:layout_editor_absoluteY="59dp" />
          </RadioGroup>

          <TextView
              android:id="@+id/fourB"
              android:layout_width="259dp"
              android:layout_height="wrap_content"
              android:text="b) Taken any other medication other than aspirin? if yes, please specify:"
              android:textColor="@color/black" />

          <com.google.android.material.textfield.TextInputEditText
              android:id="@+id/fourBInput"
              android:layout_width="242dp"
              android:layout_height="wrap_content"
              android:hint="Specify here"
              android:textColor="@color/black"

