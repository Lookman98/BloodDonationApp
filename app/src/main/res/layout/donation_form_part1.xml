            android:textStyle="bold"
            android:layout_marginBottom="10sp"/>

        <TextView
            android:id="@+id/one"
            android:layout_width="190dp"
            android:layout_height="22dp"
            android:layout_marginEnd="72dp"
            android:textColor="@color/black"
