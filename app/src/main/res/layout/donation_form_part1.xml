        </RadioGroup>


        <TextView
            android:id="@+id/eight"
            android:layout_width="315dp"
            android:layout_height="64dp"
            android:text="8. Have you had any treatment recently at any clinic or hospital? if yes, please specify type of illness and treatment received:"
